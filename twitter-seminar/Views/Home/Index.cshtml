<div class="container sign-in-up">
    <div class="row">
        <div class="card-panel text-center hoverable">
            <h3 class="center-on-small-only">Welcome to Twitter</h3>
            <h5>Newest messaging app for folks</h5>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <br>
            <div class="tab-content">
                <div class="tab-pane fade" id="new">
                    <br>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <div class="input-group right-inner-addon">
                                <i class="fa fa-user"></i>
                                <input class="form-control input-lg" placeholder="Username" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group right-inner-addon">
                                <i class="fa fa-key"></i>
                                <input class="form-control input-lg" placeholder="Password" type="password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group right-inner-addon">
                                <i class="fa fa-key"></i>
                                <input class="form-control input-lg" placeholder="Confirm Password" id="" type="password">
                            </div>
                        </div>
                    </form>
                    <br>
                    <div class=" text-center">
                        @Html.ActionLink("CONFIRM", "AllTweets", "Home", htmlAttributes: new { @class = "btn btn-success" })
                    </div>
                </div>
                <div class="tab-pane fade in active" id="user">
                    <br>
                    <form>
                        <div class="form-group">
                            <div class="right-inner-addon input-group">
                                <i class="fa fa-user"></i>
                                <input class="form-control input-lg" placeholder="Username" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="right-inner-addon input-group">
                                <i class="fa fa-key"></i>
                                <input class="form-control input-lg" placeholder="Password" type="password">
                            </div>
                        </div>
                    </form>
                    <br>
                    <div class=" text-center">
                        @Html.ActionLink("LOGIN", "AllTweets", "Home", htmlAttributes: new { @class="btn btn-success" })
                    </div>
                    <br />
                    <div class="btn-group">
                        <a href="#new" role="tab" data-toggle="tab" class="big btn btn-primary"><i class="fa fa-plus"></i> New User</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

